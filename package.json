{
	"$schema": "http://json.schemastore.org/package",
	"name": "disclosure-bot",
	"version": "0.8.1",
	"main": "./dist/index.js",
	"type": "module",
	"license": "MIT",
	"author": "oadpoaw",
	"repository": {
		"type": "git",
		"url": "https://github.com/oadpoaw/disclosure-bot.git"
	},
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"start": "node --no-warnings .",
		"upgrade": "node --no-warnings dist/scripts/upgrade.js",
		"env": "node --no-warnings dist/scripts/env.js",
		"prebuild": "npm run clean",
		"build": "tsc --build",
		"postbuild": "node scripts/postbuild.js",
		"docs": "typedoc",
		"preplugins": "node scripts/prebuild-plugins.js",
		"plugins": "tsc --project plugins/tsconfig.json",
		"postplugins": "node scripts/postbuild-plugins.js",
		"plugins:init": "node scripts/init.js",
		"plugins:deps": "npm --prefix plugins install",
		"clean": "rimraf dist && rimraf build",
		"lint": "prettier --check \"src/**/*.ts\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
		"v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
		"v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag",
		"version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
	},
	"dependencies": {
		"@discordjs/builders": "^0.15.0",
		"@discordjs/rest": "^0.5.0",
		"@oadpoaw/utils": "^1.3.3",
		"discord-api-types": "^0.34.0",
		"discord.js": "^13.8.0",
		"inquirer": "^8.2.4",
		"ms": "^2.1.3",
		"node-fetch": "^3.2.2",
		"package-name-regex": "^2.0.6",
		"semver-regex": "^4.0.5",
		"sha256-file": "^1.0.0",
		"winston": "^3.7.2",
		"winston-daily-rotate-file": "^4.7.1",
		"yaml": "^2.1.1",
		"zod": "^3.17.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@oadpoaw/ts-config": "^0.1.1",
		"@types/inquirer": "^8.2.1",
		"@types/ms": "^0.7.31",
		"@types/node": "^18.0.0",
		"@types/node-fetch": "^2.6.1",
		"@types/package-name-regex": "^2.0.0",
		"@types/rimraf": "^3.0.2",
		"@types/sha256-file": "^1.0.1",
		"conventional-changelog-cli": "^2.2.2",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.1",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"typedoc": "^0.23.1",
		"typescript": "^4.7.3"
	},
	"imports": {
		"#disclosure/*": "./dist/public/*.js"
	},
	"engines": {
		"node": ">=v17.0.0",
		"npm": ">=8.0.0"
	},
	"lint-staged": {
		"src/**/*.{ts}": [
			"prettier --write"
		]
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"tabWidth": 4,
		"semi": true,
		"endOfLine": "auto",
		"useTabs": true
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			],
			"scope-case": [
				1,
				"always",
				"pascal-case"
			]
		}
	}
}
