{
	"$schema": "http://json.schemastore.org/package",
	"name": "disclosure-bot",
	"version": "2.0.1",
	"main": "./dist/index.js",
	"type": "module",
	"license": "MIT",
	"author": "oadpoaw",
	"repository": {
		"type": "git",
		"url": "https://github.com/oadpoaw/disclosure-bot.git"
	},
	"private": true,
	"scripts": {
		"start": "node --no-warnings .",
		"upgrade": "node --no-warnings dist/scripts/update.js",
		"env": "node --no-warnings dist/scripts/env.js",
		"prebuild": "npm run clean",
		"build": "tsc --build",
		"postbuild": "node scripts/postbuild.js",
		"docs": "typedoc",
		"preplugins": "node scripts/prebuild-plugins.js",
		"plugins": "tsc --project plugins/tsconfig.json",
		"postplugins": "node scripts/postbuild-plugins.js",
		"plugins:init": "node scripts/init.js",
		"plugins:deps": "npm --prefix plugins install",
		"clean": "rimraf dist && rimraf build",
		"lint": "prettier --check \"src/**/*.ts\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"v:patch": "npm version patch -m \"chore(release): %s\" --sign-git-tag",
		"v:minor": "npm version minor -m \"chore(release): %s\" --sign-git-tag",
		"v:major": "npm version major -m \"chore(release): %s\" --sign-git-tag",
		"version": "auto-changelog -p && git add CHANGELOG.md"
	},
	"dependencies": {
		"@discordjs/builders": "^0.12.0",
		"@discordjs/rest": "^0.3.0",
		"@oadpoaw/utils": "^0.2.4",
		"discord-api-types": "^0.30.0",
		"discord.js": "^13.6.0",
		"inquirer": "^8.2.2",
		"ms": "^2.1.3",
		"node-fetch": "^3.2.2",
		"package-name-regex": "^2.0.6",
		"semver-regex": "^4.0.2",
		"sha256-file": "^1.0.0",
		"winston": "^3.6.0",
		"winston-daily-rotate-file": "^4.6.1",
		"yaml": "^1.10.2",
		"zod": "^3.14.3"
	},
	"devDependencies": {
		"@types/inquirer": "^8.2.1",
		"@types/ms": "^0.7.31",
		"@types/node": "^17.0.23",
		"@types/node-fetch": "^2.6.1",
		"@types/package-name-regex": "^2.0.0",
		"@types/sha256-file": "^1.0.1",
		"auto-changelog": "^2.4.0",
		"prettier": "^2.6.1",
		"rimraf": "^3.0.2",
		"typedoc": "^0.22.13",
		"typescript": "^4.6.3"
	},
	"imports": {
		"#disclosure/*": "./dist/structures/*.js"
	},
	"engines": {
		"node": ">=v17.0.0",
		"npm": ">=8.0.0"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"tabWidth": 4,
		"semi": true,
		"endOfLine": "auto",
		"useTabs": true
	},
	"auto-changelog": {
		"hideCredit": true,
		"template": "keepachangelog",
		"commitLimit": false
	}
}
