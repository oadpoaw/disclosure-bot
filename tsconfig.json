{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"composite": false,
		"declaration": true,
		"declarationMap": false,
		"allowJs": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@structures/*": [
				"structures/*"
			]
		}
	},
	"include": [
		"src",
		"plugins"
	]
}